{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Model",
	"type": "object",
	"properties": {
		"metadata": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"version": {
					"type": "string",
					"pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
				}
			},
			"required": [
				"name",
				"version"
			]
		},
		"fields": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"enum": [
							"string",
							"integer",
							"boolean",
							"number",
							"array",
							"object"
						]
					},
					"description": {
						"type": "string"
					},
					"required": {
						"type": "boolean"
					}
				},
				"required": [
					"type"
				]
			}
		}
	},
	"required": [
		"metadata",
		"fields"
	]
}